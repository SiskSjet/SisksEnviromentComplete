@require 'colors';
@import url('https://fonts.googleapis.com/css?family=Fjalla+One|Open+Sans:400,400i,700,700i');

html {
    font-family: 'Open Sans', 'HelveticaNeue', 'Helvetica', 'Arial', sans-serif;
    line-height: 1.5;
    font-size: 100%;
    color: $white;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: none;
}

@media only screen and (max-width: 480px) {
    html {
        font-size: 0.875em;
    }
}

@media only screen and (min-width: 576px) {
    html {
        font-size: 1em;
    }
}

@media only screen and (min-width: 768px) {
    html {
        font-size: 1.125em;
    }
}

@media only screen and (min-width: 992px) {
    html {
        font-size: 1.1875em;
    }
}

@media only screen and (min-width: 1200px) {
    html {
        font-size: 1.3125em;
    }
}

h1, h2, h3, h4, h5, h6 {
    font-family: 'Fjalla One', 'HelveticaNeue', 'Helvetica', 'Arial', sans-serif;
    font-weight: 400;
    color: $white;
}

h1 {
    font-size: 3.0625em;
    line-height: 1.4;
    margin-bottom: 0;
}

@media only screen and (min-width: 320px) and (max-width: 479px) {
    h1 {
        line-height: 1.35;
        font-size: 2.5em;
    }

    h2 {
        line-height: 1.37;
        font-size: 2em;
    }

    h3 {
        line-height: 1.43;
        font-size: 1.75em;
    }

    h4 {
        line-height: 1.45;
        font-size: 1.5em;
    }

    h5 {
        line-height: 1.55;
        font-size: 1.25em;
    }
}

@media only screen and (min-width: 480px) and (max-width: 575px) {
    h1 {
        line-height: 1.35;
    }

    h2 {
        line-height: 1.37;
    }

    h3 {
        line-height: 1.43;
    }

    h4 {
        line-height: 1.45;
    }

    h5 {
        line-height: 1.5;
    }
}

h2 {
    font-size: 2.4375em;
    line-height: 1.4;
    margin-bottom: 0;
}

h3 {
    font-size: 1.9375em;
    line-height: 1.3;
    margin-bottom: 0;
}

h4 {
    font-size: 1.5625em;
    line-height: 1.35;
    margin-bottom: 0;
}

h5 {
    font-size: 1.25em;
    line-height: 1.4;
    margin-bottom: 0;
}

p {
    font-family: 'Open Sans', 'HelveticaNeue', 'Helvetica', 'Arial', sans-serif;
    line-height: 1.7;
    font-weight: 400;
    font-size: 1em;
    color: $white;
}

a {
    color: $purple;
    text-decoration: underline;
    outline: 0;
}

a:hover, a:focus {
    text-decoration: none;
    color: $purple;
    outline: 0;
}

ul, ol, dl {
    font-size: 1em;
    line-height: 1.6;
    margin-bottom: 1.25em;
    padding-left: 1.4em;
    font-family: inherit;
}

ul {
    li {
        ol {
            margin-bottom: inherit;
        }
    }

    &.square {
        list-style-type: square;
    }

    &.circle {
        list-style-type: circle;
    }

    &.disc {
        list-style-type: disc;
    }

    &.no-bullet {
        list-style: none;
    }
}

ul.square li ul, ul.circle li ul, ul.disc li ul {
    list-style: inherit;
}
